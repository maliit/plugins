<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE keyboard SYSTEM 'VirtualKeyboardLayout.dtd'>
<keyboard version="1.0" title="Number" catalog="number">
  <layout type="number" orientation="landscape">
    <section id="main" movable="false">
      <row>
        <key>
          <binding label="1"/>
        </key>
        <key>
          <binding label="2"/>
        </key>
        <key>
          <binding label="3"/>
        </key>
        <key>
          <binding label="4"/>
        </key>
        <key>
          <binding label="5"/>
        </key>
        <key>
          <binding label="6"/>
        </key>
        <key>
          <binding label="7"/>
        </key>
        <key>
          <binding label="8"/>
        </key>
        <key>
          <binding label="9"/>
        </key>
        <key>
          <binding label="0"/>
        </key>
      </row>

      <row>
        <spacer/>

        <key width="large">
          <binding label="&#x002B;&#x002F;&#x002D;" action="plus_minus_toggle"/>
        </key>
        <key width="large">
          <binding action="decimal_separator"/>
        </key>
        <key style="special" width="large">
          <binding label="" action="backspace"/>
        </key>
        <key style="special" id="actionKey" width="large">
          <binding action="return"/>
        </key>
       </row>
    </section>
  </layout>

  <layout type="number" orientation="portrait">
    <section id="main" movable="false">
      <row>
        <key>
          <binding label="1"/>
        </key>
        <key>
          <binding label="2"/>
        </key>
        <key>
          <binding label="3"/>
        </key>
      </row>

      <row>
        <key>
          <binding label="4"/>
        </key>
        <key>
          <binding label="5"/>
        </key>
        <key>
          <binding label="6"/>
        </key>
      </row>

      <row>
        <key>
          <binding label="7"/>
        </key>
        <key>
          <binding label="8"/>
        </key>
        <key>
          <binding label="9"/>
        </key>
      </row>

      <row>
        <key>
          <binding label="&#x002B;&#x002F;&#x002D;" action="plus_minus_toggle"/>
        </key>
        <key>
          <binding label="0"/>
        </key>
        <key>
          <binding action="decimal_separator"/>
        </key>
      </row>

      <row>
        <key style="special" width="large">
          <binding label="" action="backspace"/>
        </key>
        <spacer/>
        <key style="special" id="actionKey">
          <binding action="return"/>
        </key>
      </row>
    </section>
  </layout>
</keyboard>
