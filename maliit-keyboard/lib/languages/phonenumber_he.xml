        </key>
      </row>

      <row>
        <key>
          <binding label="4" secondary_label="מנ"/>
        </key>
        <key>
          <binding label="5" secondary_label="יכל"/>
        </key>
        <key>
          <binding label="6" secondary_label="זחט"/>
        </key>
      </row>

      <row>
        <key>
          <binding label="7" secondary_label="רשת"/>
        </key>
        <key>
          <binding label="8" secondary_label="צק"/>
        </key>
        <key>
          <binding label="9" secondary_label="סעפ"/>
        </key>
      </row>

      <row>
        <key>
          <binding label="*+" cycleset="*+p" action="cycle"/>
        </key>
        <key>
          <binding label="0"/>
        </key>
        <key>
          <binding label="#"/>
        </key>
      </row>

      <row>
        <key style="special" width="large">
          <binding label="" action="backspace"/>
        </key>
        <spacer/>
        <key style="special" id="actionKey">
          <binding action="return"/>
        </key>
      </row>
    </section>
  </layout>
</keyboard>