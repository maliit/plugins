<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE keyboard SYSTEM "VirtualKeyboardLayout.dtd">
<keyboard version="1.0" title="Phone Number" catalog="phonenumber">
  <layout type="phonenumber" orientation="landscape">
    <section id="main" movable="false">
      <row height="x-large">
        <key>
          <binding label="1"/>
        </key>
        <key>
          <binding label="2" secondary_label="דהו"/>
        </key>
        <key>
          <binding label="3" secondary_label="אבג"/>
        </key>
        <key>
          <binding label="4" secondary_label="מנ"/>
        </key>
        <key>
          <binding label="5" secondary_label="יכל"/>
        </key>
        <key>
          <binding label="6" secondary_label="זחט"/>
        </key>
        <key>
          <binding label="7" secondary_label="רשת"/>
        </key>
        <key>
          <binding label="8" secondary_label="צק"/>
        </key>
        <key>
          <binding label="9" secondary_label="סעפ"/>
        </key>
        <key>
          <binding label="0"/>
        </key>
      </row>

      <row>
        <spacer/>

        <key width="large">
          <binding label="*+" cycleset="*+p" action="cycle"/>
        </key>
        <key width="large">
          <binding label="#"/>
        </key>
        <key style="special" width="large">
          <binding label="" action="backspace"/>
        </key>
        <key style="special" id="actionKey" width="large">
          <binding action="return"/>
        </key>
      </row>
    </section>
  </layout>

  <layout type="phonenumber" orientation="portrait">
    <section id="main" movable="false">
      <row>
        <key>
          <binding label="1"/>
        </key>
        <key>
